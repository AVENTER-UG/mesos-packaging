# mesos master upstart

description "Mesos Master"

env DEFAULTFILE=/etc/default/mesos

start on runlevel [2345]
respawn

pre-start script
  RUN_MESOS_MASTER=no
  if [ -f "$DEFAULTFILE" ]; then
    . "$DEFAULTFILE"
  fi
  if [ "x$RUN_MESOS_MASTER" != xyes ]; then
    stop
    exit 0
  fi
  ulimit -n 8192
end script

script
  exec /usr/local/sbin/mesos-master --conf=/etc/mesos/conf
end script

